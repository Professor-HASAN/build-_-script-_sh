#! /bin/bash
#
# Infinity OS Android 16 NikGApps Build Script
# Author: Professor-HASAN
# Device: munch (POCO F4)
#

# Clean local manifests and initialize repo
rm -rf .repo/local_manifests
repo init -u https://github.com/Infinity-XR/android_manifest.git -b aosp-16 --git-lfs

# Optionally remove old prebuilt clang
rm -rf prebuilts/clang/host/linux-x86

echo "==> Syncing Infinity OS sources..."
# If crave sync script not available, use normal repo sync
if [ -f /opt/crave/resync.sh ]; then
    /opt/crave/resync.sh
else
    repo sync -c --force-sync --no-tags --optimized-fetch --prune --retry-fetches=5
fi

echo "==> Cleaning old outputs and device/vendor/hardware trees..."
dirs_to_remove=(
    out/target/product/munch
    device/xiaomi/munch
    kernel/xiaomi/munch
    vendor/xiaomi/munch
    vendor/xiaomi/munch-firmware
    hardware/xiaomi
    hardware/dolby
    vendor/xiaomi/miuicamera
    packages/resources/devicesettings
)
rm -rf "${dirs_to_remove[@]}"

echo "=== Cloning device trees from your GitHub (Professor-HASAN) ==="
git clone https://github.com/Professor-HASAN/device_xiaomi_munch -b a16 device/xiaomi/munch
git clone https://github.com/Professor-HASAN/vendor_xiaomi_munch -b a16 vendor/xiaomi/munch
git clone https://github.com/Professor-HASAN/kernel_xiaomi_munch -b a16 kernel/xiaomi/munch
git clone https://github.com/Professor-HASAN/hardware_xiaomi -b a16 hardware/xiaomi
git clone https://github.com/Professor-HASAN/vendor_xiaomi_munch-firmware -b a16 vendor/xiaomi/munch-firmware
git clone https://github.com/Professor-HASAN/hardware_dolby -b a16 hardware/dolby
git clone https://github.com/Professor-HASAN/packages_resources_devicesettings -b a16 packages/resources/devicesettings
git clone https://github.com/Professor-HASAN/vendor_xiaomi_miuicamera -b a16 vendor/xiaomi/miuicamera

echo "=== Starting NikGApps build ==="
. build/envsetup.sh
lunch infinity_munch-user
m bacon_gms_nikgapps

echo "=== Infinity OS NikGApps build completed successfully! ==="
